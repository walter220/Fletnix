            <div class="form-group">
                <input type="submit" value="Aanmaken" class="btn btn-warning" />
            </div>
        </form>
    </div>
    <div class="col-sm-4">
        <img src="~/img/movie_placeholder.jpg" alt="" class="movie-poster" />
    </div>

</div>