@model TheWorld.Models.Genre
@{
    ViewBag.Title = "Genre page";
}
<div class="page-header">
    <h1>Toevoegen</h1>
</div>
<div class="row">
    <div class="col-md-6">
        <h2>The genre's</h2>
        <form method="post" novalidate>
            <div asp-validation-summary="ValidationSummary.ModelOnly"></div>
            <div class="form-group">
                <label asp-for="genre_name">Genre naam</label>
                <input asp-for="genre_name" class="form-control" />
                <span asp-validation-for="genre_name"></span>
            </div>
            <div class="form-group">
                <label asp-for="description">Beschrijving</label>
                <textarea asp-for="description" class="form-control" rows="3" style="resize: vertical;">
                </textarea>
                <span asp-validation-for="description"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Aanmaken" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
