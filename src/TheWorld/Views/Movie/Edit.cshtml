@using Microsoft.CodeAnalysis.CSharp.Syntax
@using TheWorld.Models
@model TheWorld.ViewModels.MovieViewModel
@{
    ViewBag.Title = "Movie detail pagina";
}
@section Styles
{
    <link href="~/lib/Font-Awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-select/dist/css/bootstrap-select.min.css" rel="stylesheet" />
}
@section Scripts
{
    <script src="~/lib/jquery/dist/jquery.min.js" type="text/javascript"></script>
    @*<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>*@
    <script src="~/lib/bootstrap-select/dist/js/bootstrap-select.min.js"></script>
    <script src="~/js/movies.js" type="text/javascript"></script>
}
<div class="page-header">
    <h1>Film</h1>
</div>
<div class="row">
    <div class="col-lg-12">
        <h2>Edit: @Model.Movie.title</h2>

        <form method="post" asp-antiforgery="true" novalidate>
            <div asp-validation-summary="ValidationSummary.ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Movie.movie_id">Movie Id</label>
                <input asp-for="Movie.movie_id" class="form-control" value="@Model.Movie.movie_id"/>
                <span asp-validation-for="Movie.movie_id"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.title">Titel</label>
                <input asp-for="Movie.title" class="form-control" value="@Model.Movie.title" />
                <span asp-validation-for="Movie.title"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.description">Description</label>
                <input asp-for="Movie.description" class="form-control" value="@Model.Movie.description"/>
                <span asp-validation-for="Movie.description"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.duration">Duur</label>
                <input asp-for="Movie.duration" class="form-control" value="@Model.Movie.duration"/>
                <span asp-validation-for="Movie.duration"></span>
            </div>

            <div class="form-group">
                <label asp-for="Movie.price">Prijs</label>
                <input asp-for="Movie.price" class="form-control" value="@Model.Movie.price"/>
                <span asp-validation-for="Movie.price"></span>
            </div>

            <div class="form-group">
                <label asp-for="Movie.publication_year">Jaar</label>
                <input asp-for="Movie.publication_year" class="form-control" value="@Model.Movie.publication_year"/>
                <span asp-validation-for="Movie.publication_year"></span>
            </div>

            <div class="form-group">
                <label asp-for="Movie.URL">Url</label>
                <input asp-for="Movie.URL" class="form-control" value="@Model.Movie.URL"/>
                <span asp-validation-for="Movie.URL"></span>
            </div>

            <div class="form-group">
                <label asp-for="Movie.minimum_age">Minimale leeftijd</label>
                <input asp-for="Movie.minimum_age" class="form-control" value="@Model.Movie.minimum_age"/>
                <span asp-validation-for="Movie.minimum_age"></span>
            </div>

            @*<div class="form-group">
                <label asp-for="MovieGenres">Selecteer genre's</label>
                <select asp-for="MovieGenres" class="selectpicker" multiple="multiple" data-live-search="true" data-size="7" data-actions-box="true">
                    @foreach (var item in Model.Genres)
                    {
                        <option value="@item.genre_name">@item.genre_name</option>
                    }
                </select>
            </div>*@

            <div class="form-group">
                <input type="submit" value="Bijwerken" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>