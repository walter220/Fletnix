@using System.Security.Claims
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/lib/bootswatch/slate/bootstrap.css"/>
    <link rel="stylesheet" href="~/lib/Font-Awesome/css/font-awesome.min.css"/>
    <link rel="stylesheet" href="~/css/main.css"/>
    <link rel="stylesheet" href="~/css/grid.css" />
    @RenderSection("Styles", false)
</head>
<body>
<nav class="navbar navbar-default">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-main" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a asp-controller="App" asp-action="Index" class="navbar-brand">FLETNIX</a>
        </div>
        <div class="collapse navbar-collapse" id="navbar-main">
            <ul class="nav navbar-nav">
                <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "App" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")"><a asp-controller="App" asp-action="Index">Home</a></li>
                <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Movie" ? "active" : "")"><a asp-controller="Movie" asp-action="Index">Movies</a></li>
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Contact" ? "active" : "")"><a asp-controller="App" asp-action="Contact">Contact</a></li>
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "About" ? "active" : "")"><a asp-controller="App" asp-action="About">About</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                @if (User.Identity.IsAuthenticated)
                {
                    <li><a asp-controller="User" asp-action="Index">Welkom @User.Identity.Name!</a></li>
                    <li><a asp-controller="Auth" asp-action="Logout">Logout</a></li>
                }
                else
                {
                    <li><a asp-controller="Auth" asp-action="Login">Login</a></li>
                    <li><a asp-controller="Auth" asp-action="Register">Registreren</a></li>
                }
            </ul>

        </div>
    </div>
</nav>

<div class="container">
    @RenderBody()
</div>

<script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script type="text/javascript" src="~/js/main.js"></script>

@RenderSection("Scripts", false)
</body>
</html>
