@model IEnumerable<TheWorld.Models.Genre>
@{
    ViewBag.Title = "Genre page";
}
<div class="page-header">
    <h1>Lijst van alle genre's</h1>
    <a asp-controller="Genre" asp-action="Create" class="btn btn-success">Genre toevoegen</a>
</div>
<div class="row">
    <div class="col-md-6">
        <h2>The genre's</h2>
        <ul>
            @foreach (var genre in Model)
            {
                <li>
                    <a asp-controller="Genre" asp-action="Genre" asp-route-id="@genre.genre_name">@genre.genre_name</a>
                    @genre.description
                </li>
            }
        </ul>
    </div>
</div>
